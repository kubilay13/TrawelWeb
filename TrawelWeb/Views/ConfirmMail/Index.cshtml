@model ConfirmMailViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Mail Onaylama</h2>
        </div>
    </div>
</section>

<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">            
                <div class="col-lg-12 mt-lg-0 mt-5 contact-center">
                    <form  method="post" class="signin-form">
                        <div class="input-grids">
                            <div class="form-group">
                                <input type="text" name="w3lName" id="ConfirmeCode" placeholder="Onay Kodu" class="contact-input">
                            </div>
                            <div class="form-group">
                                <input type="email" name="w3lSender" id="UserMail" placeholder="Email" class="contact-input" required="">
                            </div>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-style btn-primary">Onayla</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>
<script src="~/js/jquery.min.js"></script>
<script src="~/js/jquery-3.3.1.min.js"></script>
<script src="~/js/jquery.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>