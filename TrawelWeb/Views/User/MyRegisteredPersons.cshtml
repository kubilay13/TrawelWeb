@{
    Layout = "/Views/Shared/_UserLayout.cshtml";
}
<link href="~/css/Panel-css/RegisteredPersons.css" rel="stylesheet" />

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<div class="container">
	<div class="profile-details-content">
		<h1>Kayıtlı Kişiler</h1>
		<p class="capture-small">
			Beraber seyahat ettiğiniz kişilerin bilgilerini kaydedebilir, gelecek seyahatlerinizi oluştururken kolayca seçebilirsiniz.
		</p>
		<div class="row">
			<div class="col-lg-12" id="partnerMemberListDiv">


			</div>
			<div class="form-group add-new-person-btn">
				<button id="btn-add-person" type="button" class="btn btn-primary">
					<span>YENİ KİŞİ EKLE</span>
				</button>
			</div>
		</div>
	</div>
	<div class="row" id="inputContainer">
		<div class="col-md-12">
			<div id="partnerMemberAlert" class="alert alert-danger d-none" role="alert">
				<span class="alert-message"></span>
			</div>
		</div>
	</div>
	<div class="row collapse" id="collapseme">
		<form id="add-person-form" class="col-lg-12">
			<input type="hidden" id="userId" name="userId">

			<div class="profile-details-content">
				<div class="row">
					<div class="mb-4 col-lg-12 input-div">
						<div class="form-check">
							<input type="radio" name="gender_1" id="cb-female_1" value="FEMALE" data-etsmusttext="Lütfen cinsiyet seçiniz" class="form-check-input ets-MUST">
							<label for="cb-female_1">Kadın</label>
						</div>
						<div class="form-check">
							<input type="radio" name="gender_1" id="cb-male_1" value="MALE" data-etsmusttext="Lütfen cinsiyet seçiniz" class="form-check-input ets-MUST ">
							<label for="cb-male_1">Erkek</label>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="mb-3 col-md-4">
						<div class="mb-4 col-lg-12 input-div">
					
							<input id="tb-firstName_1" type="text" placeholder="isim" class="input">
						</div>
					</div>
					<div class="mb-3 col-md-4">
						<div class="labeled-input">
							
							<input id="tb-lastName_1" type="text" placeholder="Soyisim" class="input">
						</div>
					</div>
					<div class="mb-3 col-md-4 citizen">
						<div class="labeled-input">
							<input id="tckn_1" type="tel" placeholder="TC.kimlik No" class="input">
						</div>
						
					</div>
					<div class="mb-3 col-md-4">
						<div class="labeled-input">
							
							<input id="tb-birthdate_1" type="text" placeholder="Doğum Tarihi" class="input">
						</div>
					</div>
					<div class="mb-3 col-md-4 eposta">
						<div class="labeled-input">
							
							<input type="text" id="tb-contactEmail" placeholder="E-posta Adresi" class="input">
						</div>
					</div>
					<div class="mb-3 col-md-4 phone">
						<div class="row">
							<div class="col-4 pr-2">
								<div class="labeled-input">
									<label for="contactPhoneCountryCode"></label>
								</div>

							</div>
							<div class="col-8 pl-0">
								<div data-toggle="tooltip" data-placement="bottom" class="labeled-input custom-border">
									<input type="tel" placeholder="Tel no:" class="input">
								</div>
							</div>
						</div>
					</div>
					<div class="mb-3 col-md-4 passport-no-wrapper">
						<div class="labeled-input">
							<input id="tb_passportNo_1" placeholder="Pasaport No" maxlength="20" class="input">
						</div>
					</div>
					<div class="mb-3 col-md-4 passport-no-wrapper">
						<div class="labeled-input">
							
							<input id="tb-passportExpiration_1" type="text" placeholder="Pasaport Geçerlilik Tarihi" class="input">
						</div>
					</div>
				</div>
			</div>
			<div class="row submit-area">
				<button id="btn-save-person" type="button" class="btn btn-primary">
					KAYDET
				</button>
			</div>
		</form>
	</div>
</div>
<script>
	document.getElementById("btn-add-person").onclick = function () {
		var inputContainer = document.getElementById("collapseme");
		if (inputContainer !== null) {
			if (inputContainer.style.display === "none") {
				inputContainer.style.display = "block";
			} else {
				inputContainer.style.display = "none";
			}
		} else {
			console.error("collapseme bulunamadı!");
		}
	}
</script>
