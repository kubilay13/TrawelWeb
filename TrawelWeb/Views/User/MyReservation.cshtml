@{
    Layout = "/Views/Shared/_UserLayout.cshtml";
}
<link href="~/css/Panel-css/Reservation.css" rel="stylesheet" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<div class="container">
<div class="add-reservation">
    <h4>Rezervasyonumu Ekle</h4>
    <p class="p">Web sitemiz üzerinden üye girişi yapmadan gerçekleştirdiğiniz veya çağrı merkezi aracılığıyla yaptığınız tüm rezervasyonlarınızı aşağıdaki butona tıklayarak “Rezervasyonlarım” alanına taşıyabilirsiniz.</p>
    <button id="toggleButton" class="togglebutton" > Rezervasyonumu Listeme Ekle</button>
    <div id="inputContainer" style="display: none;">
        <div class="search-reservation-area">
            <input type="text" minlength="10" maxlength="10" placeholder="Telefon Numaranızı Giriniz" class="search-reservation-input ets-N mb-2">
            <input type="text" maxlength="9" placeholder="Rezervasyon Numaranızı Giriniz" class="search-reservation-input">
                <button class="button"> <span>sorgula</span> </button>
            <div class="success"></div>
        </div>
    </div>
</div>
</div>

<script>
    document.getElementById("toggleButton").onclick = function () {
        var inputContainer = document.getElementById("inputContainer");
        if (inputContainer !== null) {
            if (inputContainer.style.display === "none") {
                inputContainer.style.display = "block";
            } else {
                inputContainer.style.display = "none";
            }
        } else {
            console.error("inputContainer bulunamadı!");
        }
    }
</script>