@model List<Order>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Aktif İlanlarımız</h2>
        </div>
    </div>
    <div class="best-rooms py-5 bg-white">
        <div class="container py-md-5">

            <div class="ban-content-inf row">
                <div class="maghny-gd-1 col-lg-12 mt-lg-0 mt-4">
                    <div class="row">
                        @if(Model!= null)
                        {
                            @foreach (var item in Model)
                            {
                                <div class="maghny-gd-1 col-3 mt-4">
                                    <div class="maghny-grid">
                                        <figure class="effect-lily border-radius">
                                            <img class="img-fluid" src="/images/g7.jpg" alt="">
                                            <figcaption>
                                                <div>
                                                    <h4>@item.Brand</h4>
                                                    <p>@item.Model,@item.Color,@item.Year</p>
                                                </div>
                                            </figcaption>
                                        </figure>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
 </section>
