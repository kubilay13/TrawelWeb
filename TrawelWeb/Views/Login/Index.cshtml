@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="limiter">
    <div class="container-login100">
        <div class="video">
            <video autoplay loop muted>
                <source src="~/images/UpscaleVideo_1_20231225.mp4" type="video/mp4" />
            </video>
        </div>
        <div class="wrap-login100">
            
            <div class="login100-pic js-tilt" data-tilt="" style="will-change: transform; transform: perspective(300px) rotateX(0deg) rotateY(0deg);">
                <img src="~/images/stratton-oakmont.png" alt="IMG" width="300px">
            </div>

            <form class="login100-form validate-form">
                <span class="login100-form-title">
                    Üye Girişi
                </span>

                <div class="wrap-input100 validate-input" data-validate="">
                    <input class="input100" id="UserName" type="text" name="username" placeholder="KullanıcıAdı">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user-circle"></i>
                    </span>
                </div>
            
                <div class="wrap-input100 validate-input" data-validate="">
                    <input class="input100" id="Password" type="password" name="Password" placeholder="**********">
                    <i class="fa fa-eye" id="eyeIcon" style="position: absolute; right: 20px; top: 50%; transform: translateY(-50%); cursor: pointer;" onclick="togglePassword('Password')"></i>
                   
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>
              @*   <div class="text-left pl-3">
                    <input type="checkbox" id=" remember_me">
                    <label class="" style=" font-size: 12px;" for="brand1"><span></span>Beni Hatırla</label>
                </div> *@
                <div class="container-login100-form-btn">
                    <a class="btn btn-style btn-success" style="color:white;" onclick="SignIn()">Onayla</a>
                </div>

                <div class="text-center p-t-12">
                    <span class="txt1">
                        Unutmak
                    </span>
                    <a class="txt2" href="#">
                        Kullanıcı Adı / Şifre?
                    </a>
                </div>

                <div class="text-center p-t-136">
                    <a class="txt2" href="/Login/SignUp">
                        Hesap Oluştur
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                    <br />
                    <a class="txt2" href="/Home/Index">
                        AnaSayfa
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>



    function togglePassword(inputId) {
        var x = document.getElementById(inputId);
        var eyeIcon = document.getElementById('eyeIcon');

        if (x.type === "password") {
            x.type = "text";
            eyeIcon.className = 'fa fa-eye-slash'; // Kapalı göz ikonu
        } else {
            x.type = "password";
            eyeIcon.className = 'fa fa-eye'; // Açık göz ikonu
        }
    }
</script>
<script src="~/js/loginscript.js"></script>
<script src="~/js/jquery.min.js"></script>
<script src="~/js/jquery-3.3.1.min.js"></script>
<script src="~/js/jquery.js"></script>