@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<title>Reset Password</title>


<div class="limiter">
    <div class="container-login100">
        <div class="video">
            <video autoplay loop muted>
                <source src="~/images/video.mp4" type="video/mp4" />
            </video>
        </div>
        <div class="wrap-login100">

            <div class="login100-pic js-tilt" data-tilt="" style="will-change: transform; transform: perspective(300px) rotateX(0deg) rotateY(0deg);">
                <a href="/Home/Index">
                    <img class="strattonlogo" src="~/images/Stratton_Oakmont_Logo (3).png" alt="IMG" width="300px">
                </a>
            </div>

            <form class="login100-form validate-form" id="myForm">
                <span class="login100-form-title">
                    Şifre Değiştirme
                </span>

               <br />
               <br />
                <div class="wrap-input100 validate-input" data-validate="">
                    <input class="input100" id="Email" type="email" name="email" placeholder="Mail Adresiniz">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <i class="fa fa-user-circle"></i>
                    </span>
                </div>

                <div class="container-login100-form-btn">
                    <button class="btn btn-style btn-success" style="color:white;" onclick="SendRememberPassword()">
                        Kodu Gönder
                    </button>
                </div>
                @*   <div class="text-left pl-3">
                <input type="checkbox" id=" remember_me">
                <label class="" style=" font-size: 12px;" for="brand1"><span></span>Beni Hatırla</label>
                </div> *@
                <div class="text-center p-t-136">
                    <a class="txt2" href="/Login/SignUp">
                        Hesap Oluştur
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                    <br />
                    <a class="txt2" href="/Home/Index">
                        AnaSayfa
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>
    <script>
        function sendRememberPassword() {
            var emailInput = document.getElementById('Email').value;

            // Eğer emailInput boşsa, işlem yapma
            if (emailInput.trim() === '') {
                alert("Lütfen e-posta adresinizi girin.");
                return;
            }

            // Değilse, linke git
            var rememberLink = "~/ConfirmMail/Index"; // Değiştirilebilir
            window.location.href = rememberLink;
        }
    </script>
</div>

<script src="~/js/jquery.min.js"></script>
<script src="~/js/jquery-3.3.1.min.js"></script>
<script src="~/js/jquery.js"></script>
<script src="~/js/loginscript.js"></script>
